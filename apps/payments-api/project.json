{
  "name": "payments-api",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/payments-api/src",
  "projectType": "application",
  "tags": [],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "webpack-cli build",
        "args": ["--node-env=production"],
        "cwd": "apps/payments-api"
      },
      "configurations": {
        "development": {
          "args": ["--node-env=development"]
        }
      }
    },
    "prune-lockfile": {
      "dependsOn": ["build"],
      "cache": true,
      "executor": "@nx/js:prune-lockfile",
      "outputs": [
        "{workspaceRoot}/dist/apps/payments-api/package.json",
        "{workspaceRoot}/dist/apps/payments-api/package-lock.json"
      ],
      "options": {
        "buildTarget": "build"
      }
    },
    "copy-workspace-modules": {
      "dependsOn": ["build"],
      "cache": true,
      "outputs": ["{workspaceRoot}/dist/apps/payments-api/workspace_modules"],
      "executor": "@nx/js:copy-workspace-modules",
      "options": {
        "buildTarget": "build"
      }
    },
    "prune": {
      "dependsOn": ["prune-lockfile", "copy-workspace-modules"],
      "executor": "nx:noop"
    },
    "serve": {
      "continuous": true,
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "dependsOn": ["build"],
      "options": {
        "buildTarget": "payments-api:build",
        "runBuildTargetDependencies": false
      },
      "configurations": {
        "development": {
          "buildTarget": "payments-api:build:development"
        },
        "production": {
          "buildTarget": "payments-api:build:production"
        }
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/payments-api/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "db:seed": {
      "executor": "nx:run-commands",
      "options": {
        "command": "ts-node src/database/seed.ts",
        "cwd": "apps/payments-api"
      }
    },
    "migration:generate": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx typeorm-ts-node-commonjs migration:generate -d src/database/data-source.ts",
        "cwd": "apps/payments-api"
      }
    },
    "migration:run": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx typeorm-ts-node-commonjs migration:run -d src/database/data-source.ts",
        "cwd": "apps/payments-api"
      }
    },
    "migration:revert": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx typeorm-ts-node-commonjs migration:revert -d src/database/data-source.ts",
        "cwd": "apps/payments-api"
      }
    },
    "email:dev": {
      "executor": "nx:run-commands",
      "options": {
        "command": "email dev --dir src/lib/mail/templates",
        "cwd": "apps/payments-api"
      }
    }
  }
}

{
  "name": "full-payments",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "start:prod": "npx nx run full-payments:start:prod",
    "down:prod": "npx nx run full-payments:down:prod",
    "api:dev": "npx nx run payments-api:serve:development",
    "services:up": "docker compose -f docker-compose.dev.yml --env-file=apps/payments-api/.env up -d",
    "services:down": "docker compose -f docker-compose.dev.yml --env-file=apps/payments-api/.env down",
    "db:seed": "npx nx run payments-api:db:seed",
    "migration:generate": "nx run payments-api:migration:generate",
    "migration:run": "nx run payments-api:migration:run",
    "migration:revert": "nx run payments-api:migration:revert",
    "email:dev": "nx run payments-api:email:dev"
  },
  "dependencies": {
    "@nestjs-modules/mailer": "^2.0.2",
    "@nestjs/bullmq": "^11.0.4",
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^4.0.3",
    "@nestjs/core": "^11.0.1",
    "@nestjs/jwt": "^11.0.2",
    "@nestjs/mapped-types": "*",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.0.1",
    "@nestjs/schedule": "^6.1.1",
    "@nestjs/typeorm": "^11.0.0",
    "@react-email/components": "1.0.8",
    "argon2": "^0.44.0",
    "bullmq": "^5.70.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.3",
    "cookie-parser": "^1.4.7",
    "ms": "^2.1.3",
    "nestjs-yookassa": "^2.3.6",
    "nodemailer": "^8.0.1",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "pg": "^8.18.0",
    "react": "19.2.4",
    "react-dom": "19.2.4",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "tslib": "^2.3.0",
    "typeorm": "^0.3.28"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@nx/jest": "22.5.2",
    "@nx/js": "22.5.2",
    "@nx/nest": "^22.5.2",
    "@nx/node": "22.5.2",
    "@nx/web": "22.5.2",
    "@nx/webpack": "22.5.2",
    "@react-email/preview-server": "5.2.8",
    "@swc-node/register": "~1.11.1",
    "@swc/cli": "^0.6.0",
    "@swc/core": "~1.15.5",
    "@swc/helpers": "~0.5.18",
    "@types/cookie-parser": "^1.4.10",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/ms": "^2.1.0",
    "@types/node": "^22.10.7",
    "@types/passport-jwt": "^4.0.1",
    "@types/react": "^19.2.14",
    "@types/supertest": "^6.0.2",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.0.0",
    "jest": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "jest-util": "^29.7.0",
    "nx": "22.5.2",
    "prettier": "~3.6.2",
    "react-email": "5.2.8",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0",
    "webpack-cli": "^5.1.4"
  },
  "nx": {
    "targets": {
      "start:prod": {
        "executor": "nx:run-commands",
        "options": {
          "commands": [
            "npx nx run-many -t build",
            "docker compose -f docker-compose.prod.yml --env-file=apps/payments-api/.env.prod build --no-cache",
            "docker-compose -f docker-compose.prod.yml --env-file=apps/payments-api/.env.prod up postgres redis -d",
            "npm run migration:run",
            "docker-compose -f docker-compose.prod.yml --env-file=apps/payments-api/.env.prod up -d"
          ],
          "parallel": false
        }
      },
      "down:prod": {
        "executor": "nx:run-commands",
        "options": {
          "commands": [
            "docker-compose -f docker-compose.prod.yml --env-file=apps/payments-api/.env.prod down"
          ],
          "parallel": false
        }
      }
    }
  }
}
